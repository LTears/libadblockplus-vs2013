require.scopes.info = {
  addonName: {{ metadata.get('general', 'basename')|json }},
  addonVersion: {{ version|json }},

  application: 'safari',
  get applicationVersion() {
    return navigator.userAgent.match(/Version\/([\d.]+)/)[1];
  },

  platform: 'safari',
  get platformVersion() {
    return this.applicationVersion;
  }
};
